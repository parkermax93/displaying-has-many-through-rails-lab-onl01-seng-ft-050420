<h1><%= @patient.name %></h1>
<h2>Appointments:</h2>
   
<ol>
<% @patient.appointments.each do |appointment| %>
        <li><%= appointment.appointment_datetime.strftime("%B %d, %Y") %> at <%= appointment.appointment_datetime.strftime("%H:%M") %> - <%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %></li><br>
<% end %>
</ol>